{
  "name": "wysiwyg-shield",
  "version": "0.1.0",
  "description": "CLI tool that diffs what humans see vs what AI agents process",
  "type": "module",
  "bin": {
    "wysiwyg": "./src/cli/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli/cli.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "build": "bun build --compile --minify src/cli/cli.ts --outfile dist/wysiwyg",
    "build:npm": "bun build --target=node --outdir dist src/cli/cli.ts"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "diff": "^7.0.0",
    "picocolors": "^1.1.0",
    "markdown-it": "^14.1.0",
    "cheerio": "^1.0.0",
    "pdfjs-dist": "^5.4.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/diff": "^7.0.0",
    "@types/markdown-it": "^14.1.0",
    "bun-types": "^1.3.8",
    "typescript": "^5.7.0"
  }
}
